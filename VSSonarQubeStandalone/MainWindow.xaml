<Controls:MetroWindow x:Class="VSSonarQubeStandalone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:VSSonarExtensionUi.ViewModel;assembly=VSSonarExtensionUi"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:view="clr-namespace:VSSonarExtensionUi.View;assembly=VSSonarExtensionUi"
        Title="VSSonarQube Standalone" Height="600" Width="800" Foreground="Black" Background="White">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:SonarQubeViewModel}" x:Key="DefaultView">
            <view:SonarQubeUserControl DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl ContentTemplate="{StaticResource DefaultView}"/>
    </Grid>

</Controls:MetroWindow>
